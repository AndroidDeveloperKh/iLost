<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/post_detail_card_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/post_detail_card_img_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp">

                        <ImageView
                            android:id="@+id/post_detail_img_profile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/app_name"
                            android:src="@mipmap/ic_launcher_round" />

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/post_detail_card_img_profile"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post_detail_txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_name"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/post_detail_txt_post_timestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/date"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/post_detail_txt_post_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/post_name"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/post_detail_img_post_image"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_launcher_round"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:alpha="0.7"
                    android:background="@color/colorBlack" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:weightSum="2">-->

                <!--<Button-->
                <!--android:id="@+id/post_detail_btn_comment"-->
                <!--style="?android:attr/buttonBarButtonStyle"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:drawableStart="@drawable/ic_comment"-->
                <!--android:gravity="start|center"-->
                <!--android:paddingEnd="0dp"-->
                <!--android:paddingStart="45dp"-->
                <!--android:text="@string/comment"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="#FF0B4E59" />-->

                <!--<Button-->
                <!--android:id="@+id/post_detail_btn_save"-->
                <!--style="?android:attr/buttonBarButtonStyle"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:drawableStart="@drawable/ic_save"-->
                <!--android:gravity="start|center"-->
                <!--android:paddingEnd="0dp"-->
                <!--android:paddingStart="45dp"-->
                <!--android:text="@string/save"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="#FF0B4E59" />-->

                <!--</LinearLayout>-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/post_detail_rcl_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/post_detail_card_post"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:contentPadding="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/post_detail_edt_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/comment"
                    android:inputType="text"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/post_detail_img_send_comment"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/comment"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_send_violet" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>