<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:padding="4dp">

            <ImageView
                android:id="@+id/home_user_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/home_txt_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/post_font_size"
                android:layout_toEndOf="@id/home_user_img"
                android:text="@string/user_name"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/home_btn_post"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/post"
                android:textColor="@color/colorWhite"
                tools:targetApi="lollipop" />

        </RelativeLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/home_shimmer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:duration="800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/view_holder_post_loading" />

                <include layout="@layout/view_holder_post_loading" />

                <include layout="@layout/view_holder_post_loading" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_rcl_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>

